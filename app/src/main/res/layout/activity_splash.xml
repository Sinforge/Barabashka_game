<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SplashActivity"
        android:background="@drawable/gradient">

    <ImageView
            android:layout_width="374dp"
            android:layout_height="486dp" app:srcCompat="@drawable/ghost" android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.567" app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintVertical_bias="0.098"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="146dp"
            android:layout_height="80dp"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"/>
    <TextView
            android:text="Добро пожаловать"
            android:fontFamily="@font/main_text_regula"
            android:textSize="30dp"
            android:gravity="center"

            android:layout_width="365dp"
            android:layout_height="63dp" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.652"
            android:layout_marginBottom="128dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>