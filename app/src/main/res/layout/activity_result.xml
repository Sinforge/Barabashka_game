<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ResultActivity">
    <TextView
            android:text="Game Over"
            android:layout_width="325dp"
            android:layout_height="97dp" android:id="@+id/game_over"
            android:textSize="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.207"
            app:layout_constraintHorizontal_bias="0.45"/>
    <TextView
            android:text="Победитель:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_winner"
            android:textSize="30dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/winner_name"
            android:textSize="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_winner" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.121"/>
    <Button
            android:text="Вернуться в меню"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result_to_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="Поделиться результатом"
            android:layout_width="187dp"
            android:layout_height="59dp" android:id="@+id/share_result"
            android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/result_to_menu"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>


