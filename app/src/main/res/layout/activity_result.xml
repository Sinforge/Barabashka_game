<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ResultActivity"
        android:background="@drawable/gradient">
    <TextView
            android:text="@string/game_over"
            android:layout_width="355dp"
            android:gravity="center"
            android:layout_height="135dp" android:id="@+id/game_over"
            android:textSize="50sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.047"
            android:fontFamily="@font/main_text_regula" app:layout_constraintHorizontal_bias="0.553"/>
    <ImageView
            android:layout_width="252dp"
            android:layout_height="283dp" app:srcCompat="@drawable/ghost_winner" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.572"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="144dp"/>
    <Button
            android:text="@string/share_res"
            android:layout_width="174dp"
            android:layout_height="90dp" android:id="@+id/share_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            style="@style/button_style" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.852"/>
    <Button
            android:text="@string/back_to_menu"
            android:layout_width="170dp"
            android:layout_height="96dp" android:id="@+id/result_to_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/button_style"/>
    <TextView
            android:text="@string/winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_winner"
            android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintVertical_bias="0.258" android:fontFamily="@font/main_text_regula"/>
    <TextView
            android:text="winner_name"
            android:gravity="center"
            android:layout_width="360dp"
            android:layout_height="47dp" android:id="@+id/winner_name"
            android:textSize="30sp"
            android:fontFamily="@font/main_text_regula"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_winner" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.044"/>
</androidx.constraintlayout.widget.ConstraintLayout>


