<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.GamesHistoryActivity"
        android:background="@drawable/gradient">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="414dp"
            android:layout_height="531dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.153"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/history_of_matches"
            android:fontFamily="@font/main_text_regula"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="358dp"
            android:layout_height="44dp" android:id="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.301" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.026"/>
    <Button
            android:text="@string/back"
            android:layout_width="146dp"
            style="@style/button_style"
            android:gravity="left"
            android:layout_height="42dp" android:id="@+id/back1"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.048" app:layout_constraintVertical_bias="0.128"/>
    <Button
            android:text="@string/cl_h"
            android:layout_width="201dp"
            style="@style/button_style"
            android:textSize="15sp"
            android:gravity="left"
            android:layout_height="40dp" android:id="@+id/clear_history"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.133"/>

</androidx.constraintlayout.widget.ConstraintLayout>