<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MenuActivity">
    <Button android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/button_play"
            android:text="PLAY" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="8dp">

    </Button>
    <Button
            android:text="History"
            android:layout_width="113dp"
            android:layout_height="48dp" android:id="@+id/history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintTop_toBottomOf="@+id/button_rules" android:layout_marginTop="20dp"/>
    <Button android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/button_rules"
            android:text="RULES"
            app:layout_constraintTop_toBottomOf="@+id/button_play" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.501">

    </Button>
    <Button android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/button_exit"
            android:text="EXIT"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            android:layout_marginTop="27dp" app:layout_constraintTop_toBottomOf="@+id/history"
            app:layout_constraintVertical_bias="0.0">

    </Button>
    <ImageView
            android:layout_width="154dp"
            android:layout_height="149dp" app:srcCompat="@drawable/ghost" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="Barabashka Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logo"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="50dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>