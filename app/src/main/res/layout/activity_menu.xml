<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MenuActivity"
        android:background="@drawable/gradient">
    <Button android:layout_width="278dp"
            android:layout_height="74dp"
            android:id="@+id/button_play"
            android:text="@string/play"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/button_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="8dp" android:fontFamily="@font/gochi_hand_regular"
            android:textSize="30dp">

    </Button>
    <Button
            android:text="@string/history"
            style="@style/button_style"
            android:textSize="30dp"
            android:layout_width="293dp"
            android:layout_height="57dp" android:id="@+id/history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/button_rules" android:layout_marginTop="52dp"/>
    <Button android:layout_width="294dp"
            android:layout_height="53dp"
            android:id="@+id/button_rules"
            android:text="@string/rules"
            style="@style/button_style"
            android:textSize="30dp"

            app:layout_constraintTop_toBottomOf="@+id/button_play" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
    >

    </Button>
    <Button android:layout_width="279dp"
            android:layout_height="63dp"
            android:id="@+id/button_exit"
            android:text="@string/exit"
            style="@style/button_style"
            android:textSize="30dp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/history"
    >

    </Button>
    <ImageView
            android:layout_width="154dp"
            android:layout_height="149dp" app:srcCompat="@drawable/ghost" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="@string/game_name"
            android:fontFamily="@font/main_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logo"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="50dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>