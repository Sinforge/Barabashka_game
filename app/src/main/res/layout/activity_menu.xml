<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MenuActivity"
        android:background="@drawable/gradient">
    <Button android:layout_width="278dp"
            android:layout_height="74dp"
            android:id="@+id/button_play"
            android:text="@string/play"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/button_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="8dp" android:fontFamily="@font/gochi_hand_regular"
            android:textSize="30dp">

    </Button>
    <Button
            android:text="@string/history"
            style="@style/button_style"
            android:textSize="30sp"
            android:layout_width="293dp"
            android:layout_height="57dp" android:id="@+id/history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/button_rules" android:layout_marginTop="52dp"/>
    <Button android:layout_width="294dp"
            android:layout_height="53dp"
            android:id="@+id/button_rules"
            android:text="@string/rules"
            style="@style/button_style"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/button_play" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="36dp"
    >

    </Button>
    <Button android:layout_width="279dp"
            android:layout_height="63dp"
            android:id="@+id/button_exit"
            android:text="@string/exit"
            style="@style/button_style"
            android:textSize="30sp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/history"
            app:layout_constraintHorizontal_bias="0.492">

    </Button>
    <ImageView
            android:layout_width="154dp"
            android:layout_height="149dp" app:srcCompat="@drawable/ghost" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="@string/game_name"
            android:fontFamily="@font/main_regular"
            android:layout_width="365dp"
            android:layout_height="70dp" android:id="@+id/logo"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="50sp"
    />
    <Spinner
            android:layout_width="48dp"
            android:layout_height="48dp" android:id="@+id/lang_spinner"
            android:background="@color/trans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:popupBackground="@color/purple_200"
            app:layout_constraintVertical_bias="0.283"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.884"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="41dp" app:srcCompat="@drawable/sound" android:id="@+id/sound"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.928" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.184"/>

</androidx.constraintlayout.widget.ConstraintLayout>