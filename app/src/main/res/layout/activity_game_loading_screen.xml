<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.GameLoadingScreen"
android:background="@drawable/gradient">

    <ImageView
            android:layout_width="157dp"
            android:layout_height="133dp" app:srcCompat="@drawable/ghost_winner" android:id="@+id/ghost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.019" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.538"/>
    <TextView
            android:text="@string/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loading"
            android:textSize="60dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.288"/>
    <ImageView
            android:layout_width="167dp"
            android:layout_height="103dp" app:srcCompat="@drawable/finish" android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.995" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.551"/>
</androidx.constraintlayout.widget.ConstraintLayout>