<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
android:orientation="horizontal">

    <TextView
            android:text="Player1"
            android:fontFamily="@font/main_text_regula"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content" android:id="@+id/Winner"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="20"
            android:textSize="15sp"
            android:fontFamily="@font/main_text_regula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Score1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/Score2" android:layout_marginEnd="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.875"/>
    <TextView
            android:text="20"
            android:textSize="15sp"
            android:fontFamily="@font/main_text_regula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Score2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/date"
            android:layout_marginEnd="56dp"/>
    <TextView
            android:text="2003.10.10"
            android:textSize="15sp"

            android:fontFamily="@font/main_text_regula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>