<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.GameMode">

    <TextView
            android:text="Параметры игры"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="50dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Имя игрока 1"
            android:layout_width="141dp"
            android:layout_height="42dp" android:id="@+id/textView2"
            android:textSize="20dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Имя игрока 2"
            android:layout_width="138dp"
            android:layout_height="36dp" android:id="@+id/textView4"
            android:textSize="20dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Количество очко для победы"
            android:layout_width="306dp"
            android:layout_height="42dp" android:id="@+id/textView7"
            android:textSize="20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp"/>
    <EditText android:layout_width="188dp" android:layout_height="40dp"
              app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="20dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.051"
              android:id="@+id/player1_field" android:layout_marginTop="32dp"
              app:layout_constraintTop_toBottomOf="@+id/textView">

    </EditText>
    <EditText android:layout_width="187dp" android:layout_height="39dp"
              app:layout_constraintStart_toEndOf="@+id/textView4"
              android:id="@+id/player2_field" android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.032" android:layout_marginTop="12dp"
              app:layout_constraintTop_toBottomOf="@+id/player1_field">

    </EditText>
    <Button
            android:text="10"
            android:layout_width="83dp"
            android:layout_height="42dp" android:id="@+id/number_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="48dp"
            android:layout_marginStart="4dp"/>
    <Button
            android:text="25"
            android:layout_width="83dp"
            android:layout_height="42dp" android:id="@+id/number_25"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="48dp"/>
    <Button
            android:text="20"
            android:layout_width="83dp"
            android:layout_height="42dp" android:id="@+id/number_20"
            app:layout_constraintStart_toEndOf="@+id/number_15" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toStartOf="@+id/number_25" app:layout_constraintHorizontal_bias="0.222"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <Button
            android:text="15"
            android:layout_width="83dp"
            android:layout_height="42dp" android:id="@+id/number_15"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="48dp" app:layout_constraintStart_toEndOf="@+id/number_10"
            android:layout_marginStart="12dp"/>
    <Button
            android:text="Начать игру"
            android:layout_width="265dp"
            android:layout_height="97dp" android:id="@+id/starting"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>